<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.shenjies88.practice.im.backend.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="baseResultMap" type="com.shenjies88.practice.im.backend.entity.UserDO">
        <id property="id" jdbcType="INTEGER" column="id"/>
        <result property="account" jdbcType="VARCHAR" column="account"/>
        <result property="pwd" jdbcType="VARCHAR" column="pwd"/>
        <result property="nickname" jdbcType="VARCHAR" column="nickname"/>
        <result property="creatTime" jdbcType="TIMESTAMP" column="creat_time"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="baseColumnList">
        id,account,pwd,nickname,creat_time
    </sql>

    <select id="getByAccount" resultMap="baseResultMap">
        SELECT
        <include refid="baseColumnList"/>
        FROM user
        WHERE account = #{account}
    </select>

    <select id="countById" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM user
        WHERE id IN
        <foreach collection="memberIdList" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

    <insert id="insert" parameterType="com.shenjies88.practice.im.backend.entity.UserDO" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            account,
            pwd,
            nickname,
            creat_time,
        </trim>
        <trim prefix=" VALUES (" suffix=")" suffixOverrides=",">
            #{account, jdbcType=VARCHAR},
            #{pwd, jdbcType=VARCHAR},
            #{nickname, jdbcType=VARCHAR},
            #{creatTime, jdbcType=TIMESTAMP},
        </trim>
    </insert>
</mapper>